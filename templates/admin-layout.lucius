body {
  padding-top: 70px;
}

.navbar-fixed-top {
  padding-right: 15px;
}

.display-inline {
  display: inline;
}

.alert-top {
  margin-bottom: -15px;
}

.table-hover tbody tr:hover {
  cursor: pointer;
}

.table-hover tbody tr:hover a {
  text-decoration: underline;
}

.button-toolbar {
  padding-bottom: 17px;
}

header.navbar {
  .gravatar {
    height: #{show gravatarSize}px;
    width: #{show gravatarSize}px;
    border-radius: #{show $ div gravatarSize 2}px;
  }
}
